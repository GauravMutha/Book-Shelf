<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <a href='/'>
                    BookShelf
                </a>
            </p>
        </div>
    
        <div class="auth-links">
            <ul>
                <% if (locals.user){ %>
                <li>
                    <a href="/user/profile"><%=user.name%></a>
                </li>
                <li>
                    <a href="/user/sign-out">Sign Out</a>
                </li>
                <li>
                    <a href="/user/books">My Books</a>
                </li>
                <% }else{ %>
                <li>
                    <a href="/user/sign-in">Sign In</a>
                </li>
                <li>
                    <a href="/user/sign-up">Sign Up</a>
                </li>
                <% } %>
            </ul>
        </div>
    </nav>
</header>
<%if(locals.user){%>
    <div id="upload-link">
        <a href="/user/bookForm">Upload</a>
    </div>
<%}%>